= render 'shared/flash_messages'
= render 'validation_messages'

= form_with model: @form,
            scope: :breed_search_form,
            url: breed_searches_path,
            method: :get,
            local: false do |f|
  = f.label :breed, class: 'form-label'
  = f.text_field :query, class: 'form-control'
  = f.submit 'Search', data: { disable_with: "Searching..." }, class: 'btn btn-primary w-100 mt-2'
