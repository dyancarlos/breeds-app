%h4.mb-3= 'Breed Information'
= form_with model: @search_form,
            scope: :breed_search_form,
            url: breed_searches_path,
            method: :GET,
            remote: true do |f|
  = f.label :query, class: 'form-label'
  = f.text_field :query, class: 'form-control'
  = f.submit 'Search', class: 'btn btn-primary w-100 mt-2'
